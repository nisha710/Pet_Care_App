<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View5_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageButton
                android:id="@+id/view5_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/round_arrow_back_24"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/adore_cat3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAT"
                android:fontFamily="@font/alegreya_sans_sc"
                android:textSize="50sp"
                android:textColor="@color/service_button"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textFontWeight="25"/>
            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cats are popular pets valued for their companionship and ability to form close bonds with their owners. They are known for their graceful movements.."
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/buy_btn5"
            android:layout_width="368dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/service_title"
            android:text="Buy Now"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>